<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:background="#f5f5f5"
    android:layout_height="match_parent">

  <include layout="@layout/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:textSize="19dp"
        android:text="لطفا مشخصات کامل پستی را وارد نمایید "
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:id="@+id/linearpardakht"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:id="@+id/edtName"
            android:layout_height="wrap_content"
            android:hint="  نام و نام خانوادگی گیرنده"

            />
        <EditText
            android:layout_width="match_parent"

            android:textSize="15dp"
            android:id="@+id/edtnumber"
            android:inputType="phone"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:hint="شماره تلفن همراه گیرنده"

            />

        <EditText
            android:id="@+id/edtemail"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="ایمیل "

            />
        <EditText
            android:id="@+id/edtaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:hint="نشانی پستی "

            />
        <EditText
            android:id="@+id/edtdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:hint="توضیحات "

            />

        <Spinner
            android:id="@+id/shipping"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:spinnerMode="dialog" />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/linearpay22"
    android:background="#e7239902"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textColor="#fff"
        android:text="ثبت اطلاعات و ادامه خرید"

        />

</LinearLayout>




</LinearLayout>